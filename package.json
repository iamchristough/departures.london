{
  "name": "departures.london",
  "version": "2.0.0",
  "description": "Live departures for London's tube, dlr and overground",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tomspeak/departures.london.git"
  },
  "bugs": {
    "url": "https://github.com/tomspeak/departures.london/issues"
  },
  "scripts": {
    "webpack": "webpack-dev-server --env.dev --hot",
    "start": "nf start -j Procfile.dev -p 2000",
    "postinstall": "webpack --env.prod",
    "lint": "eslint . --ext .js --ext .jsx --fix || true",
    "pre-commit-lint": "eslint $(git diff-index --name-only HEAD | grep -e .(js|jsx)$) --fix || true",
    "test": "cross-env NODE_ENV=test ava",
    "test:watch": "npm test -- -watch",
    "coverage": "nyc npm test",
    "check:src": "npm run lint && npm run test",
    "travis:coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "pre-commit": [
    "pre-commit-lint"
  ],
  "ava": {
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ],
    "babel": "inherit",
    "files": [
      "test/**/*.test.js"
    ],
    "source": [
      "**/*.{js,jsx}",
      "!dist/**/*"
    ],
    "concurrency": 5,
    "failFast": true,
    "powerAssert": false,
    "verbose": true
  },
  "nyc": {
    "include": [
      "assets/js/**/*.{js,jsx}"
    ],
    "exclude": [
      "test/**/*.spec.js",
      "public/**/**",
      "node_modules/**/**"
    ],
    "require": [
      "babel-register",
      "./test/helpers/setup-browser-env.js"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "author": "Tom Speak, <hello@tomspeak.co.uk> (https://github.com/tomspeak)",
  "dependencies": {
    "babel-cli": "^6.16.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-istanbul": "2.0.2",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.16.3",
    "body-parser": "^1.15.2",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "cors": "^2.8.1",
    "coveralls": "^2.11.14",
    "css-loader": "^0.25.0",
    "errorhandler": "^1.4.3",
    "es6-promise": "4.0.5",
    "express": "^4.14.0",
    "file-loader": "^0.9.0",
    "hbs": "^4.0.1",
    "inuit-box-sizing": "^0.2.0",
    "inuit-normalize": "^4.1.1",
    "inuit-shared": "^0.1.5",
    "json-loader": "^0.5.4",
    "lodash": "4.16.4",
    "node-sass": "^3.10.1",
    "nodemon": "^1.11.0",
    "postcss-loader": "^0.13.0",
    "react": "^15.3.2",
    "react-addons-css-transition-group": "^15.3.2",
    "react-dom": "^15.3.2",
    "react-redux": "^4.4.5",
    "react-router": "^2.8.1",
    "redux": "^3.6.0",
    "redux-thunk": "^2.1.0",
    "request": "^2.75.0",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "2.1.0-beta.25",
    "webpack-config-utils": "2.1.0",
    "whatwg-fetch": "^1.0.0"
  },
  "devDependencies": {
    "ava": "0.16.0",
    "coveralls": "^2.11.14",
    "cross-env": "3.1.2",
    "enzyme": "^2.4.1",
    "eslint": "^3.8.0",
    "eslint-plugin-react": "^6.4.1",
    "expect": "^1.20.2",
    "foreman": "^2.0.0",
    "ignore-styles": "^5.0.1",
    "jsdom": "^9.6.0",
    "nyc": "8.3.1",
    "pre-commit": "^1.1.3",
    "react-addons-test-utils": "15.3.2",
    "react-hot-loader": "3.0.0-beta.5",
    "redux-devtools": "^3.3.1",
    "redux-devtools-log-monitor": "1.0.12-alpha",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-logger": "^2.7.0",
    "redux-mock-store": "1.2.1",
    "sinon": "2.0.0-pre.3",
    "webpack-dev-server": "2.1.0-beta.8"
  },
  "license": "MIT",
  "homepage": "http://departures.london"
}
