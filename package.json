{
  "name": "departures.london",
  "version": "1.0.0",
  "description": "Live departures for London's tube, dlr and overground",
  "main": "app.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/tomspeak/departures.london.git"
  },
  "bugs": {
    "url": "https://github.com/tomspeak/departures.london/issues"
  },
  "scripts": {
    "webpack": "webpack-dev-server --hot --progress --colors",
    "start": "nf start -j Procfile.dev -p 8000",
    "postinstall": "NODE_ENV=production webpack --config ./webpack.prod.config.js",
    "lint": "eslint . --ext .js --fix || true",
    "pre-commit-lint": "eslint $(git diff-index --name-only HEAD | grep -e .js$)",
    "test": "mocha --compilers js:babel-register -r ignore-styles -r ./test/setup.js --recursive",
    "test:watch": "npm test -- -w",
    "coverage": "babel-node node_modules/isparta/bin/isparta cover --report text --report html node_modules/mocha/bin/_mocha -- --reporter dot -r ignore-styles -r ./test/setup.js --recursive",
    "check:src": "npm run lint && npm run test",
    "travis:coverage": "babel-node node_modules/isparta/bin/isparta cover node_modules/mocha/bin/_mocha --report lcovonly -- -r ignore-styles -r ./test/setup.js --recursive",
    "travis:coveralls": "npm run travis:coverage && coveralls < coverage/lcov.info && rimraf coverage"
  },
  "pre-commit": [
    "pre-commit-lint"
  ],
  "author": "Tom Speak, <hello@tomspeak.co.uk> (https://github.com/tomspeak)",
  "dependencies": {
    "babel-cli": "^6.5.1",
    "babel-core": "^6.5.2",
    "babel-eslint": "^6.0.4",
    "babel-loader": "^6.2.3",
    "babel-plugin-react-transform": "^2.0.2",
    "babel-preset-es2015": "^6.5.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.9.0",
    "body-parser": "^1.15.1",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "cors": "^2.7.1",
    "css-loader": "^0.23.1",
    "errorhandler": "^1.4.3",
    "es6-promise": "^3.2.1",
    "express": "^4.13.4",
    "file-loader": "^0.9.0",
    "hbs": "^4.0.0",
    "inuit-box-sizing": "^0.2.0",
    "inuit-normalize": "^3.0.3",
    "inuit-shared": "^0.1.5",
    "lodash": "^4.13.1",
    "node-sass": "^3.7.0",
    "nodemon": "^1.9.2",
    "postcss-loader": "^0.9.1",
    "react": "^15.1.0",
    "react-addons-css-transition-group": "^15.1.0",
    "react-dom": "^15.1.0",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.1",
    "redux": "^3.5.2",
    "redux-thunk": "^2.1.0",
    "request": "^2.72.0",
    "sass-loader": "^4.0.0",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.13.1",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "coveralls": "^2.11.9",
    "enzyme": "^2.3.0",
    "eslint": "^3.0.1",
    "eslint-plugin-react": "^5.1.1",
    "expect": "^1.20.1",
    "foreman": "^1.4.1",
    "ignore-styles": "^4.0.0",
    "isparta": "^4.0.0",
    "jsdom": "^9.2.1",
    "json-loader": "^0.5.4",
    "mocha": "^2.5.3",
    "pre-commit": "^1.1.3",
    "react-addons-test-utils": "^15.1.0",
    "react-hot-loader": "^1.3.0",
    "redux-devtools": "^3.3.1",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.0.11",
    "redux-logger": "^2.6.1",
    "webpack-dev-server": "^1.14.1",
    "whatwg-fetch": "^1.0.0"
  },
  "license": "MIT",
  "homepage": "http://departures.london"
}
